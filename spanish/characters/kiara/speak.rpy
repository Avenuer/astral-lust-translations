    # me "Aharon..."
    me "Aharon..."

# game/characters/kiara/speak.rpy:49
translate spanish kiara_menu1_f67d3b7c:

    # kiara "Eh..."
    kiara "Eh..."

# game/characters/kiara/speak.rpy:50
